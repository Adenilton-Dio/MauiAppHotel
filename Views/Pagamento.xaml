
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Pagamento"
             Title="Pagamento">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Detalhes do Quarto:" FontAttributes="Bold" FontSize="22" />

        <Label x:Name="lblDescricao" FontSize="18" />

        <Label Text="Número de Adultos:" FontSize="18" />
        <Label x:Name="lblAdultos" FontSize="18" />

        <Label Text="Número de Crianças:" FontSize="18" />
        <Label x:Name="lblCriancas" FontSize="18" />

        <Label Text="Check-in:" FontSize="18" />
        <Label x:Name="lblCheckin" FontSize="18" />

        <Label Text="Check-out:" FontSize="18" />
        <Label x:Name="lblCheckout" FontSize="18" />

        <Label Text="Total:" FontAttributes="Bold" FontSize="18" />
        <Label x:Name="lblTotal" FontSize="18" />

        <Label Text="Selecione a forma de pagamento:" FontSize="18" />

        <Picker x:Name="pck_pagamento">
            <Picker.Items>
                <x:String>Cartão de Crédito</x:String>
                <x:String>Boleto</x:String>
                <x:String>PIX</x:String>
            </Picker.Items>
        </Picker>

        <Button Text="Confirmar"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="Confirmar_Clicked" />

    </VerticalStackLayout>
</ContentPage>
