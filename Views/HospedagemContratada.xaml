<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="MauiAppHotel.Views.HospedagemContratada"  
             NavigationPage.HasNavigationBar="False"  
             BackgroundColor="{StaticResource Gray100}">

    <Grid VerticalOptions="Center" HorizontalOptions="Center">
        <VerticalStackLayout Spacing="20" Padding="20" HorizontalOptions="Center">

            <Label Text="Suíte Super Luxo"
                   TextColor="{StaticResource Primary}"
                   FontFamily="Kalam-Regular"
                   FontSize="50"
                   HorizontalTextAlignment="Center" />

            <Frame Margin="10" Padding="10" BackgroundColor="White" CornerRadius="10" HasShadow="True">
                <HorizontalStackLayout Spacing="30" HorizontalOptions="Center">

                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Adultos:" />
                        <Label Text="2" TextColor="{StaticResource Primary}" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="5">
                        <Label Text="Crianças:" />
                        <Label Text="1" TextColor="{StaticResource Primary}" />
                    </HorizontalStackLayout>

                </HorizontalStackLayout>
            </Frame>

            <Frame Margin="10">
                <Grid ColumnDefinitions="*, *, *"
                      RowDefinitions="Auto, Auto">
                    <Label Grid.Row="0" Grid.Column="0" Text="Check-in"/>
                    <Label Grid.Row="0" Grid.Column="1" Text="Check-out"/>
                    <Label Grid.Row="0" Grid.Column="2" Text="Estadia"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Text="22/05/2025"/>
                    <Label Grid.Row="1" Grid.Column="1" Text="30/05/2025"/>
                    <Label Grid.Row="1" Grid.Column="2" Text="3"/>
                </Grid>
            </Frame>
            <Frame Margin="10">
                <HorizontalStackLayout>
                    <Label Text="Valor Total:"/>
                    <Label Text="R$ 750,00" />
                </HorizontalStackLayout>
                
            </Frame>
            <Button Text="Voltar" 
                    HorizontalOptions="Center"
                    Clicked="Button_Clicked"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
