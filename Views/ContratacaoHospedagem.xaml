<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            xmlns:sys="clr-namespace:System;assembly=netstandard"  
            x:Class="MauiAppHotel.Views.ContratacaoHospedagem"  
            Title="Calculo Diária"  
            NavigationPage.HasNavigationBar="False"  
            BackgroundColor="{StaticResource Gray100}">  

   <VerticalStackLayout Padding="20" Spacing="15">  

       <Label Text="Cálculo Diária"  
              FontFamily="Monoton-Regular"  
              FontAttributes="Bold"  
              FontSize="50"/>  

       <Picker x:Name="pck_quarto"  
               Title="Selecione a Acomodação" />  

       <Frame Padding="10"
              Margin="10">  
           <VerticalStackLayout>  

               <Grid RowDefinitions="Auto, Auto"  
                     ColumnDefinitions="*, *, 2*">  

                   <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" />  
                   <Label Grid.Row="0" Grid.Column="1"  
                          TextColor ="Black"  
                          Text="{Binding Value}"  
                          BindingContext="{x:Reference stp_adultos}" />  
                   <Stepper Grid.Row="0" Grid.Column="2"  
                            x:Name="stp_adultos"  
                            Minimum="0"  
                            Maximum="10"  
                            Increment="1" />  

                   <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" />  
                   <Label Grid.Row="1" Grid.Column="1"  
                          TextColor ="Black"  
                          Text="{Binding Value}"  
                          BindingContext="{x:Reference stp_criancas}" />  
                   <Stepper Grid.Row="1" Grid.Column="2"  
                            x:Name="stp_criancas"  
                            Minimum="0"  
                            Maximum="10"  
                            Increment="1" />  
               </Grid>  

               <Label Text="Data de Check-in:"  
                      FontAttributes="Bold"  
                      FontSize="16"/>  
               <DatePicker x:Name="dtpck_checkin"  
                           Date="{x:Static sys:DateTime.Today}"  
                           Format="dd/MM/yyyy" />  

               <Label Text="Data de Check-out:"  
                      FontAttributes="Bold"  
                      FontSize="16"/>  
               <DatePicker x:Name="dtpck_checkout"  
                           Date="{x:Static sys:DateTime.Today}"  
                           Format="dd/MM/yyyy" />  

               <Button Text="Avançar"  
                       FontAttributes="Bold"  
                       BackgroundColor="Black"  
                       TextColor="White"  
                       Clicked="Button_Clicked" />  

           </VerticalStackLayout>  
       </Frame>  

   </VerticalStackLayout>  

</ContentPage>
