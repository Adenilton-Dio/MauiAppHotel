<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">

    <Grid RowDefinitions="Auto, *"
          Padding="10">

        <Label 
            Grid.Row="0"
            Text="Cálculo da Diária"
            FontFamily="Kalam-Regular"
            FontSize="50"
            TextColor="{StaticResource Primary}" />

        <Frame Grid.Row="1" Padding="10" HasShadow="True">
            <VerticalStackLayout Spacing="20">

                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos:" />

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Source={x:Reference stp_adultos}, Path=Value}" />

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0" Text="Crianças:" />

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource Primary}"
                           Text="{Binding Source={x:Reference stp_criancas}, Path=Value}" />

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                </Grid>

                <Label Text="Escolha sua Suíte" />

                <Picker x:Name="pck_quarto"
                        Title="Selecione sua Acomodação">
                    <Picker.Items>
                        <x:String>Suíte Luxo</x:String>
                        <x:String>Suíte Master</x:String>
                    </Picker.Items>
                </Picker>

                <Frame Padding="10" Margin="10" HasShadow="True">
                    <VerticalStackLayout>
                        <Label Text="Período da Estadia" />

                        <VerticalStackLayout Spacing="10">
                            <HorizontalStackLayout>
                                <Label Text="Check-in:" VerticalOptions="Center" WidthRequest="80"/>
                                <DatePicker x:Name="dtpk_checkin"
                                            Format="dd/MM/yyyy"
                                            HorizontalOptions="StartAndExpand" />
                            </HorizontalStackLayout>

                            <HorizontalStackLayout>
                                <Label Text="Check-out:" VerticalOptions="Center" WidthRequest="80"/>
                                <DatePicker x:Name="dtpk_checkout"
                                            Format="dd/MM/yyyy"
                                            HorizontalOptions="StartAndExpand" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Button
                    Text="Avançar"
                    Clicked="Button_Clicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="Medium" />

                <Button
                    Text="Sobre"
                    Clicked="Sobre_Clicked"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="Medium" />

            </VerticalStackLayout>
        </Frame>
    </Grid>
</ContentPage>
