<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ResumoReserva"
             Title="Resumo da Reserva"
             BackgroundColor="White">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Resumo da Reserva"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <Frame Padding="15" BackgroundColor="#f0f0f0">
            <VerticalStackLayout Spacing="10">

                <Label x:Name="lblQuarto" Text="Quarto:" FontSize="18" />
                <Label x:Name="lblPreco" Text="Preço da diária:" FontSize="18" />
                <Label x:Name="lblAdultos" Text="Adultos:" FontSize="18" />
                <Label x:Name="lblCriancas" Text="Crianças:" FontSize="18" />
                <Label x:Name="lblCheckin" Text="Check-in:" FontSize="18" />
                <Label x:Name="lblCheckout" Text="Check-out:" FontSize="18" />

            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>

</ContentPage>
