<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             Title="Sobre"
             BackgroundColor="{StaticResource Gray100}">

    <VerticalStackLayout Padding="20" Spacing="15" HorizontalOptions="Center" VerticalOptions="Center">

        <Label Text="Sobre o Aplicativo"
               FontSize="36"
               FontAttributes="Bold"
               TextColor="{StaticResource Primary}"
               HorizontalOptions="Center" />

        <Label Text="Desenvolvedor:"
               FontSize="24"
               FontAttributes="Bold" />

        <Label Text="Adenilton Gomes"
               FontSize="20"
               TextColor="{StaticResource Primary}" />

        <Label Text="Este aplicativo foi desenvolvido para facilitar a contratação de hospedagens, permitindo calcular diárias, escolher acomodações e gerenciar reservas."
               FontSize="16"
               HorizontalTextAlignment="Center"
               TextColor="Gray"
               Margin="0,20,0,0" />

        <Button Text="Voltar"
                BackgroundColor="{StaticResource Primary}"
                TextColor="White"
                CornerRadius="10"
                WidthRequest="150"
                Clicked="Voltar_Clicked" />

    </VerticalStackLayout>

</ContentPage>
